<%= form_with(model: task, local: true, class: "form_outer") do |f| %>
  <div class="form_inner">
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= t("errors.template.header", model: task.model_name.human, count: task.errors.count) %></h2>
        <ul>
          <% task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "#{Task.human_attribute_name :title}", class: "form-control form-title" %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", rows: "5" %>
    </div>
    <div class="form-group">
      <%= f.label :end_time_limit %>
      <%= f.datetime_select :end_time_limit, class: "form-control" %>
      <%#= f.datetime_field("end") %>
    </div>
    <div class="form-group">
      <%= f.label :status %>
      <%= f.select :status, Task.statuses_i18n.invert, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :priority %>
      <%= f.select :priority, Task.priorities_i18n.invert, class: "form-control" %>
    </div>
  </div>
  <%= f.submit class: "cp_btn re_size" %><!-- f.submit, class: "cp_btn"とするとシンタックスエラーになる -->
<% end %>
